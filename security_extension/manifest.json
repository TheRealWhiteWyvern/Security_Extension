{
  "name": "Security Extension",
  "description": "Extension to assess website security features.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["cookies", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "security.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/cookie_detector.js"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["styles/dark.css"]
    }
  ]
}
